{
  "manifest_version": 3,
  "name": "FB Pro: Avatar Guard & Token",
  "version": "1.7.0",
  "permissions": [
    "cookies",
    "tabs",
    "activeTab",
    "storage",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "*://*.facebook.com/*",
    "https://business.facebook.com/*",
    "https://adsmanager.facebook.com/*",
    "https://accountscenter.facebook.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://*.facebook.com/*"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html", "css/*"],
      "matches": ["*://*.facebook.com/*"]
    }
  ]
}
